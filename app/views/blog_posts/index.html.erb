<h1>My Blog Site</h1>
<% @blog_posts.each do |blog_post| %>
    <div>
        <%= image_tag blog_post.cover_image if blog_post.cover_image.present? %>
        <h2><%= link_to blog_post.title, blog_post %></h2>
        <%= blog_post.content %>
        <div>
            <% if blog_post.draft? %>
                <span class="bg-gray-200 p-1 rounded">Draft</span>
            <% elsif blog_post.scheduled? %>
               <span class="bg-blue-200 p-1 rounded">Scheduled</span>
            <% end %> 
        </div>
    </div>
<% end %>

<% if @pagy.pages > 1 %>
    <div class="my-8">
        <%== pagy_nav(@pagy) %>
    </div>
<% end %>